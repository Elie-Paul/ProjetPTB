{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" rel="stylesheet" type="text/css"/>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block title %}BilletPtb{% endblock %}

{% block body %}
    <h1><big>Liste des Billets PTB</big></h1>
    
    <div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4><i class="fa fa-list"></i>&nbsp;<big>Liste des Billets PTB</big></h4>
          </div>
            <div class="col-md-6 text-right">
            <a class="btn btn-info pull-right" href="{{ path('billet_ptb_new') }}"><i class="glyphicon glyphicon-plus"></i>  <big>Nouveau billet PTB</big></a>
            </div>
          </div>
          <!-- /.box-body -->
        </div>
    <div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h1 class="box-title">Liste des billets PTB</h1>
            </div>
            <div class="box-body">
    <table class="table table-hover table-striped dataTable" id="example1">
        <thead>
            <tr>
                <th>Guichet</th>
                <th>Section</th>
                <th>Départ</th>
                <th>Arrivée</th>
                <th>Prix</th>                
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for billet_ptb in billet_ptbs %}
            <tr>
                <td>{{ billet_ptb.guichet.nom }}</td>
                <td>{{ billet_ptb.ptb.section.libelle }}</td>
                <td>{{ billet_ptb.ptb.trajet.depart.libelle }}</td>
                <td>{{ billet_ptb.ptb.trajet.arrivee.libelle }}</td>
                <td>{{ billet_ptb.ptb.section.prix }}</td>                
                <td>
                    <a class="btn btn-info" role="button" href="{{ path('billet_ptb_show', {'id': billet_ptb.id}) }}"><i class="glyphicon glyphicon-eye-open"></i>&nbsp;Voir</a>
                    <a class="btn btn-warning" role="button" href="{{ path('billet_ptb_edit', {'id': billet_ptb.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp;modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
              
            </div>
        </div>
    </div>
</div>
    <div id="userid" style="display:none;">
            {{ app.user.id }}
        </div>
{% endblock %}
{% block javascripts %}
    <!-- DataTables -->
    <script src="../../bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="../../bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <!--script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script-->
    <script>
    {% if success is defined %}
        swal("Bon travail", "Vous avez ajouté un nouveau billet pour le train PTB", "success");
    {% endif %}
        $(function () {
            $('#example1').DataTable({
                "reponsive": true,
                "pageLength": 10,
                "language": {
                    "decimal": "",
                    "loadingRecords": "Chargement...",
                    "processing": "En traitement...",
                    "lengthMenu": "Afficher _MENU_ entrées",
                    "zeroRecords": "Aucun enregistrements correspondants trouvés",
                    "emptyTable": "aucune donnée disponible",
                    "infoFiltered": "(filtré de _MAX_ entrées totales)",
                    "infoEmpty": "Affiche 0 à 0 sur 0 entrées",
                    "info": "Affiche _START_ à _END_ sur _TOTAL_ entrées",
                    "search": "Rechercher : ",
                    "paginate": {
                        "first": "Premier",
                        "last": "Dernier",
                        "previous": "Précédent",
                        "next": "Suivant"
                    }
                }
            })
        })
    </script>
{% endblock %}
