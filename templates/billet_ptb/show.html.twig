{% extends 'base.html.twig' %}

{% block title %}BilletPtb{% endblock %}

{% block body %}
    <!--h1>BilletPtb</h1-->
    <h1><big>Gestion des Billets PTB</big></h1>
    <div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('billet_ptb_index2') }}"><i class="fa fa-list"></i>&nbsp; <big>Liste des billets PTB</big></a>&nbsp;
             <a class="btn btn-warning" role="button" href="{{ path('billet_ptb_edit', {'id': billet_ptb.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp; <big>Modifier</big></a>
          </div>
          </div>
          <!-- /.box-body -->
    </div>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Information du billet PTB  {{billet_ptb.ptb}}</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Billet PTB</th>
                    <td>{{ billet_ptb.ptb }}</td>
                </tr>
                <tr>
                    <th>Numero du Dernier Billet imprimer</th>
                    <td>{{ billet_ptb.numeroDernierBillets }}</td>
                </tr>
                <tr>
                    <th>Date de creation</th>
                    <td>{{ billet_ptb.createdAt ? billet_ptb.createdAt|localizeddate('none', 'none', null, null, 'EEEE d MMMM y à HH:mm:ss') }}</td>
                </tr>
                <tr>
                    <th>Date de modification</th>
                    <td>{{ billet_ptb.updateAt ? billet_ptb.updateAt|localizeddate('none', 'none', null, null, 'EEEE d MMMM y à HH:mm:ss') }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

    {{ include('billet_ptb/_delete_form.html.twig') }}
{% endblock %}
{% block javascripts %}
<script>
  {% if error is defined %}
    swal("ERREUR", "Il y'a une contrainte d'integrité entre 'PTB' et 'Billet PTB'", "error");
    
  {% endif %}
  {% if erreur is defined %}
    swal("ERREUR", "Il y'a une contrainte d'integrité entre 'Vente PTB' et 'Billet PTB'", "error");
    
  {% endif %}
  {% if errors is defined %}
    swal("ERREUR", "Il y'a une contrainte d'integrité entre 'Commande PTB' et 'Billet PTB'", "error");
    
  {% endif %}
</script>
{% endblock %}
