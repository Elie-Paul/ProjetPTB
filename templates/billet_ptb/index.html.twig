{% extends 'base.html.twig' %}

{% block title %}BilletPtb index{% endblock %}

{% block body %}

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <form>
        <div class="form-group">
            <label for="email">Nombre de billet a imprimer</label>
            <input type="number" class="form-control" id="nbreprint">
        </div>
        <!--Material textarea-->
        <div class="md-form" style="display:none;">
            <textarea id="form7" class="md-textarea form-control" rows="3"></textarea>
            <label for="form7">Motif</label>
        </div>
        
    </form>
    <button  id="submit" onclick="print2()" class="btn btn-primary">Submit</button>
  </div>

</div>
    <h1>BilletPtb index</h1>
    <script>
         idb=0;
        function print(id)
        {
            idb=id;
            
var modal = document.getElementById('myModal');
            modal.style.display = "block";
            // Get the <span> element that closes the modal
            var span = document.getElementsByClassName("close")[0];
            // When the user clicks on <span> (x), close the modal
            span.onclick = function() 
            {
                modal.style.display = "none";
            }
            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function(event) 
            {
                if (event.target == modal) 
                {
                    modal.style.display = "none";
                }
            }
        }
        function print2()
        {
            var nbreprint = document.getElementById("nbreprint").value;
            //parseInt(nbreprint, 10);
            //alert("sss");
            var modal = document.getElementById('myModal');
            modal.style.display = "none";
            document.location.href = "http://localhost:8000/blogs/"+idb+"/"+nbreprint;

        }
        
    </script>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Section</th>
                <th>Depart</th>
                <th>Arriv√©e</th>
                <th>Prix</th>
                <th>guichet</th>
                <th>NumeroDepart</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for billet_ptb in billet_ptbs %}
            <tr>
                <td>{{ billet_ptb.id }}</td>
                <td>{{ billet_ptb.ptb.section.libelle }}</td>
                <td>{{ billet_ptb.ptb.trajet.depart.libelle }}</td>
                <td>{{ billet_ptb.ptb.trajet.arrivee.libelle }}</td>
                <td>{{ billet_ptb.ptb.section.prix }}</td>
                <td>{{ billet_ptb.guichet.nom }}</td>
                <td>{{billet_ptb.numeroDernierBillets}}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('billet_ptb_show', {'id': billet_ptb.id}) }}">show</a>
                    <a class="btn btn-warning" id="myBBtn" href="#" onclick="print({{ billet_ptb.id }})">Imprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('billet_ptb_new') }}">Create new</a>
{% endblock %}
