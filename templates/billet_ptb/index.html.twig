{% extends 'base.html.twig' %}

{% block title %}BilletPtb index{% endblock %}

{% block body %}

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <form>
        <div class="form-group">
            <label for="nbreprint">Nombre de billet a imprimer</label>
            <input type="number" class="form-control" id="nbreprint">
        </div>
          <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="modifierdpt">
          <label class="custom-control-label" for="modifierdpt">modifier la valeur de depart</label>
        </div>
        <div class="form-group test" style="display:none;">
            <label for="nbredepart">Nombre de depart</label>
            <input type="number" class="form-control" id="nbredepart">
        </div>
        
        <div class="md-form test" style="display:none;">
            <label for="form7">Motif</label>
            <textarea id="form7" class="md-textarea form-control" rows="3"></textarea>
        </div>
        
    </form>
    <button  id="submit" onclick="print2()" class="btn btn-primary">Submit</button>
  </div>

</div>
    <h1>BilletPtb index</h1>
    <script>
         idb=0;
         dpt=0;
        function show()
        {
            var test = document.getElementsByClassName("test")[0];
            var test1 = document.getElementsByClassName("test")[1];
            test.style.display="block";
            test1.style.display="block";
            return true;
        }
        function hide()
        {
            var test = document.getElementsByClassName("test")[0];
            var test1 = document.getElementsByClassName("test")[1];
            test.style.display="none";
            test1.style.display="none";
            return true;
        }
        var checkbox = document.getElementById("modifierdpt");
        var span = document.getElementsByClassName("close")[0];
        var modal = document.getElementById('myModal');
        span.onclick = function() 
        {
            modal.style.display = "none";
        }
        window.onclick = function(event) 
        {
            if (event.target == modal) 
            {
                modal.style.display = "none";
            }
        }
        checkbox.onclick = function() 
        {
                if(checkbox.checked)
                {
                    show();
                    return true;
                }
                else
                {
                    hide();
                    return true;
                }       
        }
        function print(id)
        {
            idb=id;
            alert("aaa");
            var modal = document.getElementById('myModal');
            var td = document.getElementById('dpt'+idb);
            dpt=parseInt(td.innerHTML,10)
            modal.style.display = "block";
            var checkbox = document.getElementById("modifierdpt");
          
        }
        function print2()
        {
            var nbreprint = document.getElementById("nbreprint").value;
            var checkbox = document.getElementById("modifierdpt");
            var userid = parseInt(document.getElementById("userid").innerHTML, 10);
            var motif = "";  
            if(checkbox.checked)
            {
                motif = document.getElementById("form7").value;  
                dpt = parseInt(document.getElementById('nbredepart').value, 10);
            }
            else
            {
                motif="pas de changement";
            }
            var modal = document.getElementById('myModal');
            modal.style.display = "none";
            document.location.href = `http://localhost:8000/impression/${idb}/${nbreprint}+${motif}+${dpt}+${userid}`;
            
                
                
            //document.location.href = `http://localhost:8000/impression/${idb}/${nbreprint}+${motif}+${dpt}+${userid}`;
            

        }
        
    </script>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Section</th>
                <th>Depart</th>
                <th>Arrivée</th>
                <th>Prix</th>
                <th>guichet</th>
                <th>NumeroDepart</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for billet_ptb in billet_ptbs %}
            <tr>
                <td>{{ billet_ptb.id }}</td>
                <td>{{ billet_ptb.ptb.section.libelle }}</td>
                <td>{{ billet_ptb.ptb.trajet.depart.libelle }}</td>
                <td>{{ billet_ptb.ptb.trajet.arrivee.libelle }}</td>
                <td>{{ billet_ptb.ptb.section.prix }}</td>
                <td>{{ billet_ptb.guichet.nom }}</td>
                <td id="dpt{{ billet_ptb.id }}">{{billet_ptb.numeroDernierBillets}}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('billet_ptb_show', {'id': billet_ptb.id}) }}">voir</a>
                    <a class="btn btn-warning" id="myBBtn" href="#" onclick="print({{ billet_ptb.id }})">Imprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div id="userid" style="display:none;">
            {{ app.user.id }}
        </div>
    <a class="btn btn-info" role="button" href="{{ path('billet_ptb_new') }}">nouveau</a>
{% endblock %}
