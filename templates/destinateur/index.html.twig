{% extends 'base.html.twig' %}

{% block title %}Hello DestinateurController!{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css">
    <link rel="stylesheet" href="{{ asset('evenement/select.min.css') }}">
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('mail/app.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.min.js"></script>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="formulaire">
            <form class="form" method="post">
                <div class="form-group">
                    <label for="email">Processus utilisateur</label>
                    <select multiple class="form-control" id="selUser">
                        {% for u in utilisateur %}
                            <option>{{ u.nom }} {{ u.prenom }} {{ u.roles[0] }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="pwd">Processus de commande</label>
                    <select multiple class="form-control" id="selCommande">
                        {% for u in utilisateur %}
                            <option>{{ u.nom }} {{ u.prenom }} {{ u.roles[0] }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="pwd">Processus d'impression</label>
                    <select multiple class="form-control" id="selImpression">
                        {% for u in utilisateur %}
                            <option>{{ u.nom }} {{ u.prenom }} {{ u.roles[0] }}</option>
                        {% endfor %}
                    </select>
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}
