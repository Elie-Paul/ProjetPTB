{% extends 'base.html.twig' %}

{% block title %}Classe{% endblock %}

{% block body %}
<h1>
    <big>
        Gestion des Classes
    </big>
</h1>
<div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('classe_index') }}"><i class="fa fa-list"></i>&nbsp; <big>Liste des Classes</big></a>&nbsp;
             <a class="btn btn-warning" role="button" href="{{ path('classe_edit', {'id': classe.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp; <big>Modifier</big></a>
          </div>
          </div>
          <!-- /.box-body -->
        </div>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Information de la classe {{classe.libelle}}</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table class="table table-bordered">
            <tbody>                
                <tr>
                    <th>Libelle</th>
                    <td>{{ classe.libelle }}</td>
                </tr>
                <tr>
                    <th>Date de création</th>
                    <td>{{ classe.createdAt ? classe.createdAt|localizeddate('none', 'none', null, null, 'EEEE d MMMM y à HH:mm:ss')}}</td>
                </tr>
                <tr>
                    <th>Date de modification</th>
                    <td>{{ classe.updatedAt ? classe.updatedAt|localizeddate('none', 'none', null, null, 'EEEE d MMMM y à HH:mm:ss') }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

    {{ include('classe/_delete_form.html.twig') }}
{% endblock %}
{% block javascripts %}
<script>
  {% if error is defined %}
    swal("ERREUR", "Il y'a une contrainte d'integrité entre 'Classe' et 'Navette'", "error");    
  {% endif %}
</script>
{% endblock %}