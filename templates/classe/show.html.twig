{% extends 'base.html.twig' %}

{% block title %}Classe{% endblock %}

{% block body %}
    <h1>Classe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ classe.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ classe.libelle }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ classe.createdAt ? classe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ classe.updatedAt ? classe.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" role="button" href="{{ path('classe_index') }}">retour a la liste</a>

    <a class="btn btn-info" role="button" href="{{ path('classe_edit', {'id': classe.id}) }}">modifier</a>

    {{ include('classe/_delete_form.html.twig') }}
{% endblock %}
