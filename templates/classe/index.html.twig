{% extends 'base.html.twig' %}

{% block title %}Classe index{% endblock %}

{% block body %}
   <div class="box box-primary">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4><i class="fa fa-list"></i>&nbsp;<big>Liste des Classes</big></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('classe_new') }}"><i class="glyphicon glyphicon-plus"></i>&nbsp;Nouveau</a>
          </div>
          </div>
          <!-- /.box-body -->
        </div>

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h1 class="box-title">Liste des classes autorail</h1>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Libelle</th>
                            <th>Date de creation</th>
                            <th>Date de modification</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for classe in classes %}
                        <tr>
                            <td>{{ classe.libelle }}</td>
                            <td>{{ classe.createdAt ? classe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ classe.updatedAt ? classe.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a class="btn btn-info" role="button" href="{{ path('classe_show', {'id': classe.id}) }}"><i class="fa fa-list"></i>&nbsp;voir</a>
                                <a class="btn btn-warning" role="button" href="{{ path('classe_edit', {'id': classe.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp;modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun enregistrement trouv√©</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}
