{% extends 'base.html.twig' %}

{% block title %}Abonnement{% endblock %}

{% block body %}
<div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('abonnement_index') }}"><i class="fa fa-list"></i>&nbsp; <big>Liste des abonnés</big></a>&nbsp;
             <a class="btn btn-warning" role="button" href="{{ path('abonnement_edit', {'id': abonnement.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp; <big>Modifier</big></a>
          </div>
          </div>
          <!-- /.box-body -->
    </div>

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Information sur l'abonné {{abonnement.nom}} {{abonnement.prenom}}</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Photo</th>
                <td><img class="img-circle" src="{{asset('clients/images/')}}{{abonnement.filename}}" alt="User profile picture" width="60px" height="60px"></td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ abonnement.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ abonnement.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ abonnement.adresse }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>+221: {{ abonnement.telephone }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ abonnement.createdAt ? abonnement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ abonnement.updateAt ? abonnement.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    </div>
</div>

    {{ include('abonnement/_delete_form.html.twig') }}
{% endblock %}
