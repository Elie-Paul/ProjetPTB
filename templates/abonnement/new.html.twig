{% extends 'base.html.twig' %}

{% block title %}New Abonnement{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css">
{% endblock %}
{% block javascripts %}
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        {% if success is defined %}
        swal({
            title: "Succès",
            text: "L'abonné est ajouté avec succès",
            icon: "success",

        });
        {% elseif incorrect is defined %}
        swal({
            title: "Erreur",
            text: "Le numéro de téléphone n'est pas valide",
            icon: "error",

        });
        {% elseif expiration is defined %}
        swal({
            title: "Erreur",
            text: "La date d'expiration n'est pas valide",
            icon: "error",

        });
        {% elseif tel is defined %}
        swal({
            title: "Erreur",
            text: "Il existe déjà un abonné avec ce numéro",
            icon: "error",

        });
        {% endif %}
    </script>
    <script src="{{ asset('evenement/app.js') }}"></script>
{% endblock %}
{% block body %}
    <div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4><i class="fa fa-plus"></i>&nbsp;<big>Ajouter un Abonné</big></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('abonnement_index') }}"><i class="fa fa-list"></i>&nbsp;<big>Liste des Abonnés</big></a>
          </div>
          </div>
          <!-- /.box-body -->
        </div>

<div class="box box-solid box-primary">
    <div class="box-header">
    <h3 class="box-title">Ajouter un Nouvel Abonné</h3>
    </div>
    <div class="box-body">
    {{ include('abonnement/_form.html.twig') }}
    </div>
</div>
{% endblock %}
