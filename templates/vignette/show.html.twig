{% extends 'base.html.twig' %}

{% block title %}Vignette{% endblock %}

{% block body %}
<div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4><i class="fa fa-list"></i>&nbsp;<big>Information sur vignette</big></h4>
          </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-info" href="{{ path('vignette_index') }}"><i class="fa fa-list"></i>&nbsp; Liste vignette</a>
            </div>
          </div>
        </div>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Information vignette</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vignette.id }}</td>
            </tr>
            <tr>
                <th>NumeroDernierBillet</th>
                <td>{{ vignette.numeroDernierBillet }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ vignette.createdAt ? vignette.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ vignette.updatedAt ? vignette.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-warning" href="{{ path('vignette_edit', {'id': vignette.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp;</a>
</div>
</div> 
    {{ include('vignette/_delete_form.html.twig') }}
{% endblock %}
