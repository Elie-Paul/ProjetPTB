{% extends 'base.html.twig' %}

{% block title %}New BilletPtb{% endblock %}

{% block body %}
<div class="box box-default">
  <div class="box-header with-border">
    <!--a class="btn btn-info" href="{{ path('billet_ptb_index') }}">Retour</a-->
    <div class="col-md-6">
      <h4><i class="fa fa-plus"></i>&nbsp;<big>Créer un billet PTB</big></h4>
    </div>
  </div>
</div>
<div class="box box-solid box-primary">
    <div class="box-header">
        <h3 class="box-title">Ajouter des Billets PTB </h3>   
    </div>
    <div class="box-body">
        {{ form_start(form) }}
          {{ form_row(form.ptb) }}
          {{ form_row(form.guichet) }}
          {{ form_row(form.evenement) }}
          <button class="btn btn-warning"><big>{{ button_label|default('Enregistrer') }}</big></button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
{% block javascripts %}
  <script>
    {% if error is defined %}
    swal("Attention", "Ce billet PTB existe déjà", "warning");
  {% endif %}
  </script>
{% endblock %}
