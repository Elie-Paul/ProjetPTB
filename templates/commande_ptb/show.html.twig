{% extends 'base.html.twig' %}

{% block title %}CommandePtb{% endblock %}

{% block body %}
<h1><big> Gestion des commande PTB </big></h1>
<div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4><i class="fa fa-list"></i>&nbsp; <big>Commande PTB</big></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('commande_ptb_lister') }}"><i class="fa fa-list"></i>&nbsp; <big>Liste des Commandes PTB</big></a>
          </div>
          </div>
          <!-- /.box-body -->
        </div>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Information de la Commande</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Nombre Billet</th>
                <td>{{ commande_ptb.nombreBillet }}</td>
            </tr>
            <tr>
                <th>Etat Commande</th>
                <td>{{ commande_ptb.etatCommande }}</td>
            </tr>
            <tr>
                <th>Date Commande</th>
                <td>{{ commande_ptb.dateCommande ? commande_ptb.dateCommande|localizeddate('none', 'none', null, null, 'EEEE d MMMM Y à HH:mm:SS') }}</td>
            </tr>
            <tr>
                <th>Mise à jour</th>
                <td>{{ commande_ptb.updatedAt ? commande_ptb.updatedAt|localizeddate('none', 'none', null, null, 'EEEE d MMMM Y à HH:mm:SS') }}</td>
            </tr>
            <tr>
                <th>Date de Création</th>
                <td>{{ commande_ptb.createdAt ? commande_ptb.createdAt|localizeddate('none', 'none', null, null, 'EEEE d MMMM Y à HH:mm:SS') }}</td>
            </tr>
            <tr>
                <th>Nombre Billet Réalisé</th>
                <td>{{ commande_ptb.nombreBilletRealise }}</td>
            </tr>
            <tr>
                <th>Nombre Billet Vendu</th>
                <td>{{ commande_ptb.nombreBilletVendu }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('commande_ptb_modifiernonvalider', {'id': commande_ptb.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp; <big>Modifier</big></a></br>
    </div>
</div>

    {{ include('commande_ptb/_delete_form.html.twig') }}
{% endblock %}
