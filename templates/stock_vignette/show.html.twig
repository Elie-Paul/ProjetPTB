{% extends 'base.html.twig' %}

{% block title %}StockVignette{% endblock %}

{% block body %}
<div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4><i class="fa fa-list"></i>&nbsp;<big>Stock Vignette</big></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('stock_vignette_lister') }}"><i class="fa fa-list"></i>&nbsp; Liste Stock Ptb</a>
          </div>
          </div>
          <!-- /.box-body -->
        </div>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Information du Stock</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stock_vignette.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ stock_vignette.nbre }}</td>
            </tr>
            <tr>
                <th>Date de Création</th>
                <td>{{ stock_vignette.createdAt ? stock_vignette.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mise à jour</th>
                <td>{{ stock_vignette.updatedAt ? stock_vignette.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-warning" href="{{ path('stock_vignette_modifier', {'id': stock_vignette.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp;Modifier</a>
   </div>
</div>
    {{ include('stock_vignette/_delete_form.html.twig') }}
{% endblock %}
