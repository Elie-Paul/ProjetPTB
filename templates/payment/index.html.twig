{% extends 'base.html.twig' %}

{% block title %}Payment index{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        .toHide {
            display: block;
        }

        .toPrint {
            display: none;
        }

        .seconde-page {
            -webkit-print-color-adjust: exact;
            display: none;
        }
        .cote-gauche .ligne span {
            -webkit-print-color-adjust: exact;
            color: #f0ad4e;
        }
    </style>
    <link rel="stylesheet" media="print" href="{{ asset('print/css/print.css') }}">
    <link rel="stylesheet" href="{{ asset('payment/css/app.css') }}">
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        function printContent() {
            var hide = document.querySelector('.toHide');
            var show = document.querySelector('.toPrint');
            hide.style.display = 'none';
            show.style.display = 'block';
            var col = document.querySelector('.ligne');
            col.style.bgColor = '#28fe2e';
            window.print();
            col.style.bgColor = '#32fe6b';
            show.style.display = 'none';
            hide.style.display = 'block';
            return true;
        }
    </script>
{% endblock %}

{% block body %}
    {#-----------------------------------------------------------------------------------------------------------#}
    <div class="toPrint">
        <div class="col-sm-12 premiere-page">
            <div class="cote-top">
