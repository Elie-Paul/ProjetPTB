{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <!-- CSS IMPRIMER-->
    <link href="https://cdn.datatables.net/buttons/1.5.6/css/buttons.bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="https://cdn.datatables.net/buttons/1.5.6/css/buttons.dataTables.min.css" rel="stylesheet" type="text/css"/>
{% endblock %}
{% block title %}VenteVignette index{% endblock %}

{% block body %}
<div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4><i class="fa fa-list"></i>&nbsp;<big>Liste des Ventes de Billet Vignette</big></h4>
          </div>
          </div>
        </div>
<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h1 class="box-title">Liste des ventes</h1>
            </div>
            <div class="box-body">
    <table class="table table-hover table-striped table-bordered" id="example1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre De Billet vendu</th>
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vente_vignette in vente_vignettes %}
            <tr>
                <td>{{ vente_vignette.id }}</td>
                <td>{{ vente_vignette.nbreDeBillet }}</td>
                <td>{{ vente_vignette.createAt ? vente_vignette.createAt|date('Y-m-d à H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('vente_vignette_show', {'id': vente_vignette.id}) }}"><i class="glyphicon glyphicon-eye-open"></i>&nbsp; Voir</a>
                    <a class="btn btn-warning" href="{{ path('vente_vignette_edit', {'id': vente_vignette.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp; Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
        </div>
    </div>
</div>
{% endblock %}
