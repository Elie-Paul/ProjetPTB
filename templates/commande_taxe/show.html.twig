{% extends 'base.html.twig' %}

{% block title %}CommandeTaxe{% endblock %}

{% block body %}
<div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4><i class="fa fa-list"></i>&nbsp;<big>Commande PTB</big></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('commande_taxe_lister') }}"><i class="fa fa-list"></i>&nbsp; Liste Commande Taxe</a>
          </div>
          </div>
          <!-- /.box-body -->
        </div>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Information de la Commande</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande_taxe.id }}</td>
            </tr>
            <tr>
                <th>Nombre Billet</th>
                <td>{{ commande_taxe.nombreBillet }}</td>
            </tr>
            <tr>
                <th>Etat Commande</th>
                <td>{{ commande_taxe.etatCommande }}</td>
            </tr>
            <tr>
                <th>Date Commande</th>
                <td>{{ commande_taxe.dateCommande ? commande_taxe.dateCommande|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date Comnande Validée</th>
                <td>{{ commande_taxe.dateComnandeValider ? commande_taxe.dateComnandeValider|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date Commande Realisée</th>
                <td>{{ commande_taxe.dateCommandeRealiser ? commande_taxe.dateCommandeRealiser|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre Billet Vendu</th>
                <td>{{ commande_taxe.nombreBilletVendu }}</td>
            </tr>
            <tr>
                <th>Nombre Billet Realisé</th>
                <td>{{ commande_taxe.nombreBilletRealise }}</td>
            </tr>
            <tr>
                <th>Dernière mise à jour </th>
                <td>{{ commande_taxe.updatedAt ? commande_taxe.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('commande_taxe_modifier', {'id': commande_taxe.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp;Modifier</a>
</div>
</div>
    {{ include('commande_taxe/_delete_form.html.twig') }}
{% endblock %}
