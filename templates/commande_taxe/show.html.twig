{% extends 'base.html.twig' %}

{% block title %}CommandeTaxe{% endblock %}

{% block body %}
<h1><big> Gestion des commandes taxes </big></h1>
<div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4><i class="fa fa-list"></i>&nbsp; <big>Commande PTB</big></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('commande_taxe_lister') }}"><i class="fa fa-list"></i>&nbsp; <big>Liste des Commandes Taxe</big></a>
          </div>
          </div>
          <!-- /.box-body -->
        </div>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Information de la Commande</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Nombre Billet</th>
                <td>{{ commande_taxe.nombreBillet }}</td>
            </tr>
            <tr>
                <th>Etat Commande</th>
                <td>{{ commande_taxe.etatCommande }}</td>
            </tr>
            <tr>
                <th>Date Commande</th>
                <td>{{ commande_taxe.dateCommande ? commande_taxe.dateCommande|localizeddate('none', 'none', null, null, 'EEEE d MMMM y à HH:mm:ss') }}</td>
            </tr>
            <tr>
                <th>Nombre Billet Vendu</th>
                <td>{{ commande_taxe.nombreBilletVendu }}</td>
            </tr>
            <tr>
                <th>Nombre Billet Realisé</th>
                <td>{{ commande_taxe.nombreBilletRealise }}</td>
            </tr>
            <tr>
                <th>Dernière mise à jour </th>
                <td>{{ commande_taxe.updatedAt ? commande_taxe.updatedAt|localizeddate('none', 'none', null, null, 'EEEE d MMMM y à HH:mm:ss') }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('commande_taxe_modifier1', {'id': commande_taxe.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp; <big>Modifier</big></a>
</div>
</div>
    {{ include('commande_taxe/_delete_form.html.twig') }}
{% endblock %}
