{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css"/>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
{% endblock %}
{% block title %}Audit index{% endblock %}

{% block body %}
    <h1>
    <big>
        Audit
    </big>
</h1>
    <div class="box box-default">
        <div class="box-header with-border">
            <div class="col-md-6">
                <h4>
                    <i class="fa fa-list"></i>&nbsp;<big>Suivi activité</big>
                </h4>
            </div>
            
        </div>
        <!-- /.box-body -->
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h1 class="box-title">Suivi activité</h1>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <!--input class="form-control pull-right" name="table_search" placeholder="Search" type="text">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div-->
                            </div>
                        </div>
                    </div>
    <div class="box-body">
    <table class="table table-hover table-striped dataTable" id="example1">
        <thead>
            <tr>
                <th>Username</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>type</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Description</th>
                
            </tr>
        </thead>
        <tbody>
        {% for audit in audits %}
            <tr>
                <td>{{ audit.User.UserName }}</td>
                <td>{{ audit.User.Prenom }}</td>
                <td>{{ audit.User.Nom }}</td>
                {% if audit.type.libelle == "impression" %}
                    <td><button class="btn btn-success" disabled>{{ audit.type.libelle}}</button></td>
                {% endif %}
                {% if audit.type.libelle == "impression irreguliére" %}
                    <td><button class="btn btn-danger" disabled>{{ audit.type.libelle}}</button></td>
                {% endif %}
                {% if audit.type.libelle == "retour billet normale" %}
                    <td><button class="btn btn-info" disabled>{{ audit.type.libelle}}</button></td>
                {% endif %}
                {% if audit.type.libelle == "retour billet irregulier" %}
                    <td><button class="btn btn-warning" disabled>{{ audit.type.libelle}}</button></td>
                {% endif %}
                
                <td>{{ audit.createdAt ? audit.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ audit.updatedAt ? audit.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ audit.description }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    
{% endblock %}
{% block javascripts %}
    
    <!-- DataTables -->
    <script src="../../bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="../../bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <!--script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script-->

    <script>
    {% if success is defined %}
        swal("Bon travail", "Vous aviez ajouté un nouveau guichet", "success");
    {% endif %}
        $(function () {
            $('#example1').DataTable({
                "reponsive": true,
                "pageLength": 10,
                
                "language": {
                    "decimal":        "",
                    "loadingRecords": "Chargement...",
                    "processing":     "En traitement...",
                    "lengthMenu":     "Afficher _MENU_ entrées",
                    "zeroRecords":    "Aucun enregistrements correspondants trouvés",
                    "emptyTable":     "aucune donnée disponible",
                    "infoFiltered":   "(filtré de _MAX_ entrées totales)",
                    "infoEmpty":      "Affiche 0 à 0 sur 0 entrées",
                    "info": "Affiche _START_ à _END_ sur _TOTAL_ entrées",
                    "search": "Rechercher : ",
                    "paginate": {
                        "first": "Premier",
                        "last":  "Dernier",
                        "previous": "Précédent",
                        "next": "Suivant"
                    }
                }
            })
        })
    </script>
{% endblock %}
