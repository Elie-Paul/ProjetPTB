{% extends 'base.html.twig' %}

{% block title %}CommandeVignette{% endblock %}

{% block body %}
<div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4><i class="fa fa-list"></i>&nbsp;<big>Commande PTB</big></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('commande_vignette_lister') }}"><i class="fa fa-list"></i>&nbsp; Liste Commande Taxe</a>
          </div>
          </div>
          <!-- /.box-body -->
        </div>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Information de la Commande</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Nombre Billet</th>
                <td>{{ commande_vignette.nombreBillet }}</td>
            </tr>
            <tr>
                <th>Etat Commande</th>
                <td>{{ commande_vignette.etatCommande }}</td>
            </tr>
            <tr>
                <th>Date Commande</th>
                <td>{{ commande_vignette.dateCommande ? commande_vignette.dateCommande|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date Comnande Validée</th>
                <td>{{ commande_vignette.dateComnandeValider ? commande_vignette.dateComnandeValider|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date Commande Realisée</th>
                <td>{{ commande_vignette.dateCommandeRealiser ? commande_vignette.dateCommandeRealiser|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre Billet Vendu</th>
                <td>{{ commande_vignette.nombreBilletVendu }}</td>
            </tr>
            <tr>
                <th>Nombre Billet Realisée</th>
                <td>{{ commande_vignette.nombreBilletRealise }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-warning" href="{{ path('commande_vignette_edit', {'id': commande_vignette.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp;Modifier</a>
    </div>
</div>

    {{ include('commande_vignette/_delete_form.html.twig') }}
{% endblock %}
