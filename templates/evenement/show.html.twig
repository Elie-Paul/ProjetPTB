{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
        <div class="box box-default">
        <div class="box-header with-border">
            <div class="col-md-6">
                <h4>
                    <i class="fa fa-plus"></i>&nbsp;<big>Liste Evenement</big>
                </h4>
            </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-primary pull-right" href="{{ path('evenement_index') }}">
                    <i class="fa fa-list"></i>&nbsp;Lister les Evenements</a>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Informaion sur {{evenement.libelle}}</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
    <table class="table table-bordered">
        <tbody>            
            <tr>
                <th>Evènement</th>
                <td>{{ evenement.libelle }}</td>
            </tr>
            <tr>
                <th>Date Evenement</th>
                <td>{{ evenement.dateEvent ? evenement.dateEvent|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fin Evenement</th>
                <td>{{ evenement.finEvent ? evenement.finEvent|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de creation</th>
                <td>{{ evenement.createdAt ? evenement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mise à jour</th>
                <td>{{ evenement.UpdatedAt ? evenement.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" role="button" href="{{ path('evenement_edit', {'id': evenement.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp;modifier</a>
    </div>
</div>

    {{ include('evenement/_delete_form.html.twig') }}
{% endblock %}
