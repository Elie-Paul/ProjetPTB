{% extends 'base.html.twig' %}

{% block title %}New Evenement{% endblock %}

{% block body %}
    <div class="box box-default">
        <div class="box-header with-border">
            <div class="col-md-6">
                <h4>
                    <i class="fa fa-plus"></i>&nbsp;<big>Ajouter Evenement</big>
                </h4>
            </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-primary pull-right" href="{{ path('evenement_index') }}">
                    <i class="fa fa-list"></i>&nbsp;Lister les Evenements</a>
            </div>
        </div>
        <!-- /.box-body -->
    </div>

    {% if error is defined %}
        <div class="panel panel-danger">
            {{ error }}
        </div>
    {% endif %}
    <div class="box box-solid box-primary">
        <div class="box-header">
            <h3 class="box-title">Ajouter un nouveau Evenement</h3>   
        </div>
        <div class="box-body">            
                {{ include('evenement/_form.html.twig') }}            
        </div>
    </div>
{% endblock %}
