{% extends 'base.html.twig' %}

{% block title %}Trajet{% endblock %}

{% block body %}

<div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('trajet_index') }}"><i class="fa fa-list"></i>&nbsp; <big>Liste des Trajets</big></a>&nbsp;
              <a class="btn btn-warning" role="button" href="{{ path('trajet_edit', {'id': trajet.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp; <big>Modifier</big></a>
          </div>
          </div>
          <!-- /.box-body -->
        </div>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Information du trajet {{trajet.depart.libelle}}-{{trajet.arrivee.libelle}}</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table class="table table-bordered">
            <tbody>                
                <tr>
                    <th>Départ</th>
                    <td>{{trajet.depart.libelle}}</td>
                </tr>
                <tr>
                    <th>Arrivée</th>
                    <td>{{trajet.arrivee.libelle}}</td>
                </tr>
                <tr>
                    <th>Date de creation</th>
                    <td>{{ trajet.createdAt ? trajet.createdAt|localizeddate('none', 'none', null, null, 'EEEE d MMMM Y à HH:mm:SS') }}</td>
                </tr>
                <tr>
                    <th>Date de modification</th>
                    <td>{{ trajet.updatedAt ? trajet.updatedAt|localizeddate('none', 'none', null, null, 'EEEE d MMMM Y à HH:mm:SS') }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

    {{ include('trajet/_delete_form.html.twig') }}
{% endblock %}

