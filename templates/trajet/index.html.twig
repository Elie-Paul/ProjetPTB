{% extends 'base.html.twig' %}

{% block title %}Trajet index{% endblock %}

{% block body %}
<div class="box box-primary">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4><i class="fa fa-list"></i>&nbsp;<big>Liste des Trajets</big></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('trajet_new') }}"><i class="glyphicon glyphicon-plus"></i>&nbsp; Nouveau</a>
          </div>
          </div>
          <!-- /.box-body -->
        </div>

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h1 class="box-title">Liste des trajets</h1>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Depart</th>
                            <th>Arrivée</th>
                            <th>Date de creation</th>
                            <th>Date de modification</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for trajet in trajets %}
                        <tr>
                            <td>{{ trajet.id }}</td>
                            <td>{{ trajet.depart.libelle }}</td>
                            <td>{{ trajet.arrivee.libelle }}</td>
                            <td>{{ trajet.createdAt ? trajet.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ trajet.updatedAt ? trajet.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>

                                <a class="btn btn-info" role="button" href="{{ path('trajet_show', {'id': trajet.id}) }}"><i class="glyphicon glyphicon-eye-open"></i>&nbsp;voir</a>
                                <a class="btn btn-warning" role="button" href="{{ path('trajet_edit', {'id': trajet.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp;modifier</a>

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


{% endblock %}
