{% extends 'base.html.twig' %}

{% block title %}Lieux{% endblock %}

{% block body %}
<h1><big> Gestion des Stations/Gares </big></h1>
<div class="box box-default">
    <div class="box-header with-border">
            <div class="col-md-6">
            <h4></h4>
            </div>
            <div class="col-md-6 text-right">
                <a href="{{ path('lieux_index') }}" class="btn btn-info"><i class="fa fa-list"></i> <big>Liste des Stations/Gares</big></a>
                <a class="btn btn-warning" role="button" href="{{ path('lieux_edit', {'id': lieux.id}) }}"><i class="glyphicon glyphicon-pencil"></i> <big>Modifier</big></a>
            </div>
    </div>
</div>

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Information sur la stations {{lieux.libelle}}</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Libelle</th>
                    <td>{{ lieux.libelle }}</td>
                </tr>
                <tr>
                    <th>Date de création</th>
                    <td>{{ lieux.createdAt ? lieux.createdAt|localizeddate('none', 'none', null, null, 'EEEE d MMMM y à HH:mm:ss') }}</td>
                </tr>
                <tr>
                    <th>Date de modification</th>
                    <td>{{ lieux.updatedAt ? lieux.updatedAt|localizeddate('none', 'none', null, null, 'EEEE d MMMM y à HH:mm:ss') }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


    {{ include('lieux/_delete_form.html.twig') }}
{% endblock %}
{% block javascripts %}
<script>
  {% if error is defined %}
    swal("ERREUR", "Il y'a une contrainte d'integrité entre 'Gare' et 'Trajet'", "error");
    
  {% endif %}
  {% if erreur is defined %}
    swal("ERREUR", "Il y'a une contrainte d'integrité entre 'Gare' et 'Guichet'", "error");
    
  {% endif %}
</script>
{% endblock %}
