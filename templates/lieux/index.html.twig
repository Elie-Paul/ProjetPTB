{% block body %}
   
<!--h1>Lieux index</h1-->
<h1><big> Gestion des gares </big></h1>
<div class="box box-primary">
    <div class="box-header with-border">
            <div class="col-md-6">
            <h4><i class="fa fa-list"></i> &nbsp;<big> Liste des gares </big></h4>
            </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-info" href="{{ path('lieux_new') }}"><i class="fa fa-plus"></i> <big>Ajouter</big></a>
                <div class="btn-group margin-bottom-20">
                    <a class="btn btn-success" href="#" class="btn btn-success"> <big>Exporter en PDF</big> </a>
                    <a class="btn btn-success" href="#" class="btn btn-success"> <big>Exporter en CVS</big> </a>
                </div>
            </div>
    </div>
</div>
 <!--div class="box box-primary">
          <div class="box-header with-border">
            <a class="btn btn-info" href="{{ path('lieux_new') }}">Nouveau</a>
          </div>
</div-->

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h1 class="box-title"><big>Liste des gares</big></h1>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <div class="dataTables_filter" id="example1_filter">
                            <input aria-controls="example1" type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                            <!--div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div-->
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover table-striped dataTable" id="">
                    <thead>
                        <tr>
                            <!--th>Id</th-->
                            <th>Libelle</th>
                            <th>Date de creation</th>
                            <th>Date de modification</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for lieux in lieuxes %}
                        <tr>
                            <!--td>{{ lieux.id }}</td-->
                            <td>{{ lieux.libelle }}</td>
                            <td>{{ lieux.createdAt ? lieux.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ lieux.updatedAt ? lieux.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a class="btn btn-info" role="button" href="{{ path('lieux_show', {'id': lieux.id}) }}"><i class="glyphicon glyphicon-eye-open"></i> <big> voir</big></a>
                                <a class="btn btn-warning" href="{{ path('lieux_edit', {'id': lieux.id}) }}"><i class="glyphicon glyphicon-pencil"></i> <big> modifier</big></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun enregistrement trouv√©</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                
            </div>
        </div>
    </div>
</div>

{% endblock %}
