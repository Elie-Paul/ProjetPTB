{% extends 'base.html.twig' %}

{% block title %}Lieux index{% endblock %}

{% block body %}
    <h1>Lieux index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lieux in lieuxes %}
            <tr>
                <td>{{ lieux.id }}</td>
                <td>{{ lieux.libelle }}</td>
                <td>{{ lieux.createdAt ? lieux.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ lieux.updatedAt ? lieux.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('lieux_show', {'id': lieux.id}) }}">show</a>
                    <a href="{{ path('lieux_edit', {'id': lieux.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('lieux_new') }}">Create new</a>
{% endblock %}
