{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" rel="stylesheet" type="text/css"/>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>

    <!-- CSS IMPRIMER-->
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css"/>
    <link href="https://cdn.datatables.net/buttons/1.5.6/css/buttons.dataTables.min.css" rel="stylesheet" type="text/css"/>
{% endblock %}
{% block title %}Lieux index{% endblock %}
{% block body %}
    <!--h1>Lieux index</h1-->
    <h1>
        <big>
            Gestion des stations/gares
        </big>
    </h1>
    <div class="box">
        <div class="box-header with-border">
            <div class="col-md-6">
                <h4>
                    <i class="fa fa-list"></i>
                    &nbsp;<big>
                        Liste des stations/gares
                    </big>
                </h4>
            </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-info" href="{{ path('lieux_new') }}">
                    <i class="fa fa-plus"></i>
                    <big>Ajouter</big>
                </a>
                <div class="btn-group margin-bottom-20">
                    <a class="btn btn-success" class="btn btn-success" href="#" onclick="imprimer_table()">
                        <big>Exporter en PDF</big>
                    </a>
                    <a class="btn btn-success" class="btn btn-success" href="#">
                        <big>Exporter en CVS</big>
                    </a>
                </div>
            </div>
        </div>
    </div>
   
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h1 class="box-title">
                        <big>Liste des stations/gares</big>
                    </h1>                    
                </div>
                <!--div class="box-body table-responsive no-padding"-->
                <div class="box-body">
                    <table class="table table-hover table-striped dataTable" id="example1" style="width:100%">
                        <thead>
                            <tr>
                                <!--th>Id</th-->
                                <th aria-controls="example1">Libelle</th>
                                <th aria-controls="example1">Date de création</th>
                                <th aria-controls="example1">Date de modification</th>
                                <th aria-controls="example1">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for lieux in lieuxes %}
                                <tr>
                                    <!--td>{{ lieux.id }}</td-->
                                    <td>
                                        {{ lieux.libelle }}</td>
                                    <td>
                                        {{ lieux.createdAt ? lieux.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>
                                        {{ lieux.updatedAt ? lieux.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>
                                        <a class="btn btn-info" role="button" href="{{ path('lieux_show', {'id': lieux.id}) }}">
                                            <i class="glyphicon glyphicon-eye-open"></i>
                                            <big>
                                                voir</big>
                                        </a>
                                        <a class="btn btn-warning" href="{{ path('lieux_edit', {'id': lieux.id}) }}">
                                            <i class="glyphicon glyphicon-pencil"></i>
                                            <big>
                                                modifier</big>
                                        </a>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="5">Aucun enregistrement trouvé</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <!-- DataTables -->
    <script src="../../bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="../../bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

    <!-- PDF AND CVS>
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.flash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.print.min.js"></script-->

    <script>
    {% if success is defined %}
        swal("Bon travail", "Vous aviez ajouté une nouvelle gare", "success");
    {% endif %}
        $(function () {
            $('#example1').DataTable({
                "reponsive": true,
                "pageLength": 10,
                "language": {
                    "decimal": "",
                    "loadingRecords": "Chargement...",
                    "processing": "En traitement...",
                    "lengthMenu": "Afficher _MENU_ entrées",
                    "zeroRecords": "Aucun enregistrements correspondants trouvés",
                    "emptyTable": "aucune donnée disponible",
                    "infoFiltered": "(filtré de _MAX_ entrées totales)",
                    "infoEmpty": "Affiche 0 à 0 sur 0 entrées",
                    "info": "Affiche _START_ à _END_ sur _TOTAL_ entrées",
                    "search": "Rechercher : ",
                    "paginate": {
                        "first": "Premier",
                        "last": "Dernier",
                        "previous": "Précédent",
                        "next": "Suivant"
                    }
                }
            })
        })
    </script>

    <script type="text/javascript">
        function imprimer_table(){
        window.print();
        }
    </script>
{% endblock %}