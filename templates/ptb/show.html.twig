    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ptb.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ ptb.createdAt ? ptb.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
