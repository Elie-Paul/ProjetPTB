{% extends 'base.html.twig' %}

{% block title %}Ptb{% endblock %}

{% block body %}
<h1>
    <big>
        Gestion des trains PTB
    </big>
</h1>

<div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('ptb_index') }}"><i class="fa fa-list"></i>&nbsp; <big>Liste des trains PTB</big></a>&nbsp;
            <a class="btn btn-warning" role="button" href="{{ path('ptb_edit', {'id': ptb.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp; <big>Modifier</big></a>
          </div>
          </div>    
          <!-- /.box-body -->
        </div>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Information du train PTB {{ ptb.trajet }}, {{ ptb.section.libelle }}</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table class="table table-bordered">
            <tbody>                
                <tr>
                    <th>Trajet</th>
                    <td>{{ ptb.trajet }}</td>
                </tr>
                <tr>
                    <th>Section</th>
                    <td>{{ ptb.section.libelle }}</td>
                </tr>
                <tr>
                    <th>Date de création</th>
                    <td>{{ ptb.createdAt ? ptb.createdAt|localizeddate('none', 'none', null, null, 'EEEE d MMMM y à HH:mm:ss') }}</td>
                </tr>
                <tr>
                    <th>Date de modification</th>
                    <td>{{ ptb.updatedAt ? ptb.updatedAt|localizeddate('none', 'none', null, null, 'EEEE d MMMM y à HH:mm:ss') }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

    {{ include('ptb/_delete_form.html.twig') }}
{% endblock %}
{% block javascripts %}
<script>
  {% if error is defined %}
    swal("ERREUR", "Il y'a une contrainte d'integrité entre 'PTB' et 'Billet PTB'", "error");
  {% endif %}
</script>
{% endblock %}