<form method="post" action="{{ path('ptb_delete', {'id': ptb.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ptb.id) }}">
    <button class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i>&nbsp;Supprimer</button>
</form>
