{% extends 'base.html.twig' %}

{% block title %}New Guichet{% endblock %}

{% block body %}
<h1>
    <big>
        Gestion des Guichets
    </big>
</h1>

<div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4><i class="fa fa-plus"></i>&nbsp;<big>Ajouter un Guichet</big></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('guichet_index') }}"><i class="fa fa-list"></i>&nbsp; <big>Liste des Guichets</big></a>
          </div>
          </div>
          <!-- /.box-body -->
        </div>
<div class="box box-solid box-primary">
    <div class="box-header">
        <h3 class="box-title">Ajouter un nouveau Guichet</h3>   
</div>
    <div class="box-body">
      <div class="container">
        {{ include('guichet/_form.html.twig') }}
      </div>
    </div>
</div>
    
{% endblock %}
{% block javascripts %}
  <script>
    {% if error is defined %}
    swal("Attention", "Ce nom de guichet existe déjà", "warning");
  {% endif %}
  </script>
{% endblock %}
