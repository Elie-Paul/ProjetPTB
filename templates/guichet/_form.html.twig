
<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <div class="modal-header"><span class="close" style="color: red;">&times;</span></div>

    <div class="modal-body">
        <form>
        <div class="form-group">
            <label for="nomGare"><big>Libelle</big></label>
            <input type="text"
              class="form-control" name="" id="libelle" aria-describedby="helpId" placeholder="Entrer une gare">
          </div>
        </form>
    </div>

    <div class="modal-footer left">
        <button  id="submit" onclick="ajouter()" class="btn btn-primary"><big>Ajouter</big></button>
    </div>
  </div>
  

</div>

{{ form_start(form) }}
<div class="row">
    <div class="col-xs-10">{{ form_row(form.code) }}</div>
</div>
<div class="row">
    <div class="col-xs-10">{{ form_row(form.nom) }}</div>
</div>
<div class="row">
    <div class="col-xs-10">{{ form_row(form.lieu) }}</div>
    <div class="col-xs-2 cs"><a type="button" class="btn btn-warning" id="myBBtn" onclick="mode()"><i class="glyphicon glyphicon-plus"></i></a></div>
</div>
    <button class="btn btn-info">{{ button_label|default('Enregistrer') }}</button>

{{ form_end(form) }}

