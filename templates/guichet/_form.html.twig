<script>

        var span = document.getElementsByClassName("close")[0];
        var modal = document.getElementById('myModal');
        span.onclick = function() 
        {
            modal.style.display = "none";
        }
        window.onclick = function(event) 
        {
            if (event.target == modal) 
            {
                modal.style.display = "none";
            }
        }

        function ajouter(){
          var libelle = document.getElementById("libelle").value;
          modal.style.display = "none";
          document.location.href = `http://serveurptb:8000/addLieuGuichet/${libelle}`;          

        }
        
        function mode()
        {
            var modal = document.getElementById('myModal');

            modal.style.display = "block";
          
        }
        
//-------Traitement du Modal----------------//
document.getElementById("submit").addEventListener("click", function(e){
  e.preventDefault();

  var libelle = document.getElementById("libelle").value;
  var regex = /^[a-zA-Z0-9éèïî ]+$/;

  if (libelle === "" || !regex.test(libelle)) {
    alert("Le champ ne doit pas être vide et ne doit pas contenir des caractères spéciaux !!");
  }
  else{
    let xhttp=new XMLHttpRequest();
    
    xhttp.onreadystatechange = function()
    {
      if(this.readyState == 4 && this.status == 200)
      {
        let response = JSON.parse(xhttp.response);
        console.log(response);
        
        if(response){
          swal({
          title: "Succès",
          text: "Une station a été ajoutée",
          icon: "success",
          
          })
              .then((value) => {
                var modal = document.getElementById('myModal');
                modal.style.display = "none";
                document.location.href="http://serveurptb:81/iBillet/public/guichet/new";
                  
              });

        }else
        {
          swal({
          title: "Erreur",
          text: "Cette station existe déjà ",
          icon: "error",
          
          })
              .then((value) => {
                var modal = document.getElementsByClassName('modal')[0];
                modal.style.display = "block";
                  
              });
        }
        
      }
    }
    
    xhttp.open("POST","http://serveurptb:81/iBillet/public/addLieuTrajetNavette",true);
    xhttp.responseType = "json";
    let parm = `${libelle}`;
    xhttp.send(parm);  
  }

  return false;

});
        
    </script>
