                <option>traité</option>
            </select>
                
            <input type="date" class="form-control" id="start" style=' margin-left:10px; width : 200px; display:inline;'>
            <input type="date" class="form-control" id="end"  style='margin-left:30px; width : 200px; display:inline;' >
            <select class="form-control" id="guichet" style='margin-left:30px; width : 200px; display:inline;'>
