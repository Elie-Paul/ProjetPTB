{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" rel="stylesheet" type="text/css"/>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block title %}BilletPtb{% endblock %}

{% block body %}

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <form>
        <div class="form-group">
            <label for="nbreprint">Nombre de billets à imprimer</label>
            <input type="number" class="form-control" id="nbreprint">
        </div>
         <div class="form-group">
            <label for="color">Couleur billet</label>
            <input class="jscolor"  id="color" class="form-control" value="fff">
        </div>
          <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="modifierdpt">
          <label class="custom-control-label" for="modifierdpt">Modifier la valeur de depart</label>
        </div>
        <div class="form-group test" style="display:none;">
            <label for="nbredepart">Nombre de depart</label>
            <input type="number" class="form-control" id="nbredepart">
        </div>
        
        <div class="md-form test" style="display:none;">
            <label for="form7">Motif</label>
            <textarea id="form7" class="md-textarea form-control" rows="3"></textarea>
        </div>
        
    </form>
    <button  id="submit" onclick="print2()" class="btn btn-primary">Submit</button>
  </div>

</div>
    <h1>Commande Autorail</h1>
    <div id='pdiv' style='display:none;'class="progress"></div>
  <div id='pdiv2' style='display:none;' class="progress-bar" role="progressbar" aria-valuenow="70"
  aria-valuemin="0" aria-valuemax="100" style="width:70%">
  </div>

    <div class="box box-default">
          <div class="box-header with-border">
            <div class="col-md-6">
                <h4><i class="fa fa-list"></i>&nbsp;<big>Commande Autorail</big></h4>
            </div>
          </div>
    </div>
    <div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h1 class="box-title">Liste des Commande Autorail </h1>
            </div>
            <div class="box-body">
    <table class="table table-hover table-striped dataTable" id="example1">
        <thead>
            <tr>
                <th>Classe</th>
                <th>Trajet</th>
                <th>Guichet</th>
                <th>Nombre Commandé</th>
                <th>Nombre Realisé</th>
                <th>Réalisation</th>
            </tr>
        </thead>
        <tbody id='tbody'>

        </tbody>
    </table>
              
            </div>
        </div>
    </div>
</div>
{% endblock %}
