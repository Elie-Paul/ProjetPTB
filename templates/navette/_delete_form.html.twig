<form method="post" action="{{ path('navette_delete', {'id': navette.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ navette.id) }}">
    <button class="btn btn-info">Supprimer</button>
</form>
