{% extends 'base.html.twig' %}

{% block title %}Navette{% endblock %}

{% block body %}
    <h1>Navette</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ navette.id }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ navette.prix }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ navette.createdAt ? navette.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ navette.updatedAt ? navette.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" role="button" href="{{ path('navette_index') }}">retour a la liste</a>

    <a class="btn btn-info" role="button" href="{{ path('navette_edit', {'id': navette.id}) }}">modifier</a>

    {{ include('navette/_delete_form.html.twig') }}
{% endblock %}
