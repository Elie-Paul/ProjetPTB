{% extends 'base.html.twig' %}

{% block title %}Navette{% endblock %}

{% block body %}
<div class="box box-primary">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('navette_index') }}"><i class="fa fa-list"></i>&nbsp;Liste Navette</a>&nbsp;
          <a class="btn btn-warning" role="button" href="{{ path('navette_edit', {'id': navette.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp;modifier</a>
          </div>
          </div>
          <!-- /.box-body -->
        </div>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Information du train autorail</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>#</th>
                    <td>{{ navette.id }}</td>
                </tr>
                <tr>
                    <th>Trajet</th>
                    <td>{{ navette.trajet.depart.libelle }}-{{ navette.trajet.arrivee.libelle }}</td>
                </tr>
                <tr>
                    <th>Classe</th>
                    <td>{{ navette.classe.libelle }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ navette.prix }}</td>
                </tr>
                <tr>
                    <th>Date de creation</th>
                    <td>{{ navette.createdAt ? navette.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Date de modification</th>
                    <td>{{ navette.updatedAt ? navette.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>    

    {{ include('navette/_delete_form.html.twig') }}
{% endblock %}
