<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Impression</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
</head>
<Style>
    .page
    {
        display: grid;
        grid-template-columns: repeat(4, 190px);
        grid-template-rows: repeat(5, 200px);
        -webkit-print-color-adjust: exact;
        color-adjust: exact;
        position:relative;
        top :45px;
        width: 100%;
        grid-row-gap:20px;
        /*overflow: auto;*/
        /*page-break-after: always;*/
        
    }

    @page 
    {
        size: auto;   /* auto is the initial value */
        margin: 0px;  /* this affects the margin in the printer settings */
        margin-bottom:20px;
    }
    .billet
    {
        -webkit-print-color-adjust: exact;
        color-adjust: exact;
        background-image: url('{{ asset('img/backbillet3.png') }}');
        line-height:0.5px; 
        opacity: 0.85;
        
        
    }
    
   .main
    {
        display: block;
        -webkit-print-color-adjust: exact;
       position: absolute;
        
        left: 40px;
        right: 20px;
        width :100%;
    }
     @media print 
  {
      .page
      {
        overflow: auto;
        page-break-after: always;
        page-break-inside: Avoid;
      }
  }
   
</style>
<body style="width: 100%;">
    
    <div class="main" style="background-color:#{{color}};">
        {% set myVal = 0 %}
        {% for i in nbrebillet %}
            {% if myVal == 0 %}
            <div class="page">
            {% endif %}
            <div class="billet">
                <h3>N : {{i}}</h3>
                <h3>PTB{{ date ? date|date('m/Y ') : '' }}</h3>
                <h3>guichet:controlleur</h3>
                <h3>Taxe</h3>
                <h3>Taxe Controlleur</h3>
                <h5>Tarif: {{billet.prix}}Fcfa</h5>
                <h3>***Senegal***</h3>
            </div>
            {% set myVal = myVal + 1 %}
            {% if myVal == 20 %}
                </div>
                {% set myVal = 0 %}
            {% endif %}
        {% endfor %}
    </div>
    
</body>
</html>
<script>
    
    

    let f={{testMotif}};
    let param="{{ app.user.id }}+impression billet taxe Numero {{nDepart}} au numero {{nLast}}";
    //alert(param);
    let xhr=new XMLHttpRequest();
        xhr.onload=function ()
        {
            if(this.status == 200)
            {
                window.print();
            }
        }
    if(f)
    {
        xhr.open("POST","http://serveurptb:8000/audit/impression",false);
        xhr.send(param);
    }
    else
    {
        xhr.open("POST","http://serveurptb:8000/audit/reimpression",false);
        param=param +"pour motif:{{motif}}";
        xhr.send(param);
    }
       
    window.onafterprint = 
    function(event) 
    { 
       
        document.location.href = "http://serveurptb:8000/billet/taxe/";

    };
</script>