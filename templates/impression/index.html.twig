<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Impression</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
</head>
<script>
  var superLink="http://localhost:8000";
</script>
<Style>
    .page
    {
        display: grid;
        grid-template-columns: repeat(4, 190px);
        grid-template-rows: repeat(5, 200px);
        position:relative;
        top :20px;
        -webkit-print-color-adjust: exact;
        color-adjust: exact;
        width: 100%;  
        grid-row-gap:30px;
            
    }

    @page {
    size: auto;   /* auto is the initial value */
    margin: 0px;  /* this affects the margin in the printer settings */
    margin-bottom:0px;
    }
    .billet
    {
        -webkit-print-color-adjust: exact;
        color-adjust: exact;
        background-image: url('{{ asset('img/backbillet3.png') }}');
        line-height:0.5px; 
        opacity: 0.85;
        
        
    }
    .main2
    {
         display: block;
       -webkit-print-color-adjust: exact;
        position: absolute;
        top:0;
        left: 0px;
        width :40px;
    }
    
   .main
    {
       display: block;
       -webkit-print-color-adjust: exact;
        position: absolute;
        top:0;
        left: 50px;
        right: 20px;
        width :100%;
    }
  @media print 
  {
      .page
      {
        overflow: auto;
        page-break-after: always;
        page-break-inside: Avoid;
      }
  }
   
</style>
<body style="width: 100%;">
    <div class="main2" style="background-color:#{{color}};"></div>
    <div class="main" style="background-color:#{{color}};">
        {% set myVal = 0 %}
        {% for i in nbrebillet %}
            {% if myVal == 0 %}
            <div class="page">
            {% endif %}
            <div class="billet">
                <h3>N : {{i}}</h3>
                <h3>PTB{{ date ? date|date('m/Y ') : '' }}</h3>
                <h3>{{billet.guichet.nom }}</h3>
                <h5>Aller simple</h5>
                <h5>Départ:{{billet.ptb.trajet.depart.libelle}}</h5>
                <h5>Arrivée:{{billet.ptb.trajet.arrivee.libelle}}</h5>
                <h5>{{billet.ptb.section.libelle}}</h5>
                <h5>Tarif: {{billet.ptb.section.prix}}Fcfa</h5>
                <h3>***Senegal***</h3>
            </div>
            {% set myVal = myVal + 1 %}
            {% if myVal == 20 %}
                </div>
                {% set myVal = 0 %}
            {% endif %}
        {% endfor %}
    </div>
    
</body>
</html>
<script>
    
    

    let f={{testMotif}};
    let param="{{ app.user.id }}+impression billet PTB {{billet.ptb}} pour le Guichet {{billet.guichet.nom }} du  Numero {{nDepart}} au numero {{nLast}}";
    //alert(param);
    let xhr=new XMLHttpRequest();
        xhr.onload=function ()
        {
            if(this.status == 200)
            {
                window.print();
            }
        }
    if(f)
    {
        xhr.open("POST",superLink+"/audit/impression",false);
        xhr.send(param);
    }
    else
    {
        xhr.open("POST",superLink+"/audit/reimpression",false);
        param=param +"pour motif:{{motif}}";
        xhr.send(param);
    }
       
    window.onafterprint = 
    function(event) 
    { 
       
        document.location.href = superLink+"/billet/ptb/";

    };
</script>
