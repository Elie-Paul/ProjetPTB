{% extends 'base.html.twig' %}

{% block title %}CommandeNavette{% endblock %}

{% block body %}
<h1><big> Gestion des commande Navette </big></h1>
     <div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4><i class="fa fa-list"></i>&nbsp;<big>Commande Navette</big></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('commande_navette_lister') }}"><i class="fa fa-list"></i>&nbsp; <big>Liste des Commandes Navette</big></a>
          </div>
          </div>
          <!-- /.box-body -->
        </div>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Information de la Commande</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande_navette.id }}</td>
            </tr>
            <tr>
                <th>Nombre Billet</th>
                <td>{{ commande_navette.nombreBillet }}</td>
            </tr>
            <tr>
                <th>Etat Commande</th>
                <td>{{ commande_navette.etatCommande }}</td>
            </tr>
            <tr>
                <th>Date Commande</th>
                <td>{{ commande_navette.dateCommande ? commande_navette.dateCommande|localizeddate('none', 'none', null, null, 'EEEE d MMMM Y à HH:mm:SS') }}</td>
            </tr>
            <tr>
                <th>Nombre Billet Vendu</th>
                <td>{{ commande_navette.nombreBilletVendu }}</td>
            </tr>
            <tr>
                <th>Nombre Billet Réalisée</th>
                <td>{{ commande_navette.nombreBilletRealise }}</td>
            </tr>
            <tr>
                <th>Date de Création</th>
                <td>{{ commande_navette.createdAt ? commande_navette.createdAt|localizeddate('none', 'none', null, null, 'EEEE d MMMM Y à HH:mm:SS') }}</td>
            </tr>
            <tr>
                <th>Mise à jour</th>
                <td>{{ commande_navette.updatedAt ? commande_navette.updatedAt|localizeddate('none', 'none', null, null, 'EEEE d MMMM Y à HH:mm:SS') }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('commande_navette_modifiernonvalider', {'id': commande_navette.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp; <big>Modifier</big></a></br>
</div>
</div>

    {{ include('commande_navette/_delete_form.html.twig') }}
{% endblock %}
