{% extends 'base.html.twig' %}
{% block stylesheets %}
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
{% endblock %}
{% block title %}Edit User{% endblock %}

{% block body %}
<div class="box box-default">
      <div class="box-header with-border">
          <div class="col-md-6">
            <h4><i class="fa fa-list"></i>&nbsp;<big>Information sur Mon Profil</big></h4>
          </div>
          <div class="col-md-6 text-right">
            {% if is_granted('ROLE_ADMINISTRATEUR') %}
              <a class="btn btn-info" href="{{ path('user_index') }}"><i class="fa fa-list"></i>&nbsp;Liste Utilisateur</a>
            {% endif %}
          </div>
          </div>
          <!-- /.box-body -->
        </div>
<div class="box box-solid box-primary">
    <div class="box-header">
        <h3 class="box-title">Modification de l'utilisateur {{user.username|capitalize}}</h3>   
    </div>
    <div class="box-body">
    {{ form_start(form) }}    
    <div class="row">
        <div class="col-xs-12">{{ form_row(form.username) }}</div>
    </div>
    <div class="row">
        <div class="col-xs-12">{{ form_row(form.nom) }}</div>        
    </div>
<div class="row">
    <div class="col-xs-12">{{ form_row(form.prenom) }}</div>    
</div>
<div class="row">
    <div class="col-xs-12">{{ form_row(form.email) }}</div>    
</div>
{% if is_granted('ROLE_ADMINISTRATEUR') %} 
<div class="row">
    <div class="col-xs-12">{{ form_row(form.roles) }}</div>    
</div>
{% endif %} 
<div class="row">
    <div class="col-xs-12">{{ form_row(form.password) }}</div>    
</div>
    <button class="btn btn-info">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
    
</div>
</div>
    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
