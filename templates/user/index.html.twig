        })
    </script>

    <script type="text/javascript">
        function imprimer_table(){
        window.print();
        }
    </script>

    <script>
        function bloquer(id) {
            $.ajax({
                url: '/user/bloquer',
                type: 'post',
                data: {id: id},
                dataType: 'json',
                success: function (data) {
                    switch(data.status) {
                        case 'error':
                            swal("Erreur", data.message, "error");
                            break;
                        case 'success':
                            swal("SUCCES", data.message, "success");
                            $('.content').load('http://localhost:8000/user/ .content');
                            break;
                        default:
                            swal("Erreur", data.message, "error");
                    }
                },
                error: function (error) {
                    swal("Erreur", "Une erreur est survenue", "error");
                }
            });
            return false;
        }
    </script>
{% endblock %}
