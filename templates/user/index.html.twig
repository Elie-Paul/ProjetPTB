{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="box box-default">
          <div class="box-header with-border">
          <div class="col-md-6">
            <h4><i class="fa fa-list"></i>&nbsp;<big>Liste des Utilisateurs</big></h4>
          </div>
          <div class="col-md-6 text-right">
            <a class="btn btn-info" href="{{ path('user_new') }}"><i class="glyphicon glyphicon-plus"></i>&nbsp;Nouveau Utilisateur</a>
          </div>
          </div>
          <!-- /.box-body -->
        </div>
<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h1 class="box-title">Liste des lieux</h1>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body table-responsive no-padding">

    <table class="table">
        <thead>
            <tr>
                <th>Utilisateur</th>
                <th>RÃ´les</th>
                <th>Mot de Passe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a class="btn btn-warning" role="button" href="{{ path('user_show', {'id': user.id}) }}"><i class="glyphicon glyphicon-eye-open"></i>&nbsp;voir</a>
                    <a class="btn btn-info" role="button" href="{{ path('user_edit', {'id': user.id}) }}"><i class="glyphicon glyphicon-pencil"></i>&nbsp;modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
